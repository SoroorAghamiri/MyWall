@{
    ViewData["Title"] = "My Crochets";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <div>
        <div class="text-center">
            <p class="buttonText">These are some of my crochet projects</p>
        </div>
        <div id="card-horizontal">
            @* Add Cards here *@
            <div class="card">
                <img src="~/Images/Crochets/1.JPG" alt="Crochet" class="card-image"/>
                <div style="position: relative; padding-top:12%;">
                    <div class="card-text"><b>Nokhod Ali</b></div>
                    <p class="card-text">The frog</p> 
                </div>
            </div>

            <div class="card">
                <img src="~/Images/Crochets/2.jpg" alt="Crochet" class="card-image"/>
                <div style="position: relative; padding-top:12%;">
                    <div class="card-text"><b>Loubia Pari</b></div> 
                    <p class="card-text">The flower girl. She is Nokhod Ali's cousine.</p> 
                </div>
            </div>

            <div class="card">
                <img src="~/Images/Crochets/3.jpg" alt="Crochet" class="card-image"/>
                <div style="position: relative; padding-top:12%;">
                    <div class="card-text"><b>Lucky Nakazaki</b></div> 
                    <p class="card-text">This turtle was adopted from Tokyo. Hopefully, he doesn't belong to a mafia gang!</p> 
                </div>
            </div>

            <div class="card">
                <img src="~/Images/Crochets/4.jpg" alt="Crochet" class="card-image"/>
                <div style="position: relative; padding-top:12%;">
                    <div class="card-text"><b>Flower Pot</b></div> 
                    <p class="card-text">This is a flower pot.</p> 
                </div>
            </div>

        </div>
    </div>
</body>